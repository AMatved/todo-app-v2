# ==================== КОНФИГУРАЦИЯ СЕРВЕРА ====================

# Порт для HTTP сервера
PORT=3000

# Порт для HTTPS сервера
HTTPS_PORT=3443

# URL клиентского приложения (для CORS)
CLIENT_URL=http://localhost:3000

# ==================== JWT КОНФИГУРАЦИЯ ====================

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
# Сгенерируйте случайный ключ: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production-use-256-bit-random-key

# Срок действия токена (например: 7d, 1d, 12h)
JWT_EXPIRES_IN=7d

# ==================== ОКРУЖЕНИЕ ====================

# Режим работы (development или production)
NODE_ENV=development

# ==================== БЕЗОПАСНОСТЬ ====================

# В продакшене установить в 'true' для httpsOnly cookies
SECURE_COOKIES=false
